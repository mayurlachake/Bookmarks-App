<% if current_user %>
  <h2>Latest Bookmarks</h2>
  <table style="width: 100%">
    <thead>
      <tr>
        <th>Url</th>
        <th>User</th>
      </tr>
    </thead>

    <tbody>
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><%= link_to bookmark.title, bookmark.url %></td>
          <td><%= link_to bookmark.user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%#= paginate @bookmarks %>

<% else %>
  <div class="panel">
    <h1>Share your bookmarks!</h1>
    <p>A simple app to track and share your beloved bookmarks with others.</p>
    <%= link_to "Get started today", new_user_registration_path, :class => "button button-large" %>
  </div>

  <hr>

  <div class="row">
    <div class="large-4 columns">
      <h3>About this app</h3>
      <p>This app developed by <a href="https://github.com/mayurlachake" target="_blank">Mayur Lachake</a> as a Ruby ob Rails project to create bookmarks of different user and store it for quick access. </p>
    </div>
  </div>
<% end %>